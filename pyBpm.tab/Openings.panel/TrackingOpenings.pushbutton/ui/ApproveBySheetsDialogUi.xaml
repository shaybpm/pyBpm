<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="אישור פתחים לפי גיליונות קומפילציה"
	MinHeight="500"
	MinWidth="280"
	ResizeMode="CanResize"
	WindowStartupLocation="CenterScreen"
	Width="600"
	Height="600"
	FlowDirection="LeftToRight">
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="28" />
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Margin="4" BorderBrush="Gray" BorderThickness="2">


		</Border>

		<Grid Grid.Row="2" Margin="4">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Click="ok_btn_click" Content="OK" />
			<Button Grid.Column="1" Click="cancel_btn_click" Content="Cancel" />
		</Grid>

	</Grid>
</Window>