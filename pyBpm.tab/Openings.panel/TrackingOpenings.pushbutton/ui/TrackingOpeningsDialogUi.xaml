<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="מעקב פתחים" Height="800" Width="400" WindowStartupLocation="CenterScreen">

    <Grid FlowDirection="RightToLeft" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="88"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="8" Click="get_dates_by_latest_sheet_versions_btn_click" >
                <TextBlock Text="בין מהדורות אחרונות של גיליונות פתחים של BPM" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
            <StackPanel Grid.Column="1" Margin="4 0 4 0">
                <TextBlock Text="פתחים שהשתנו מתאריך:" />
                <DatePicker />
                <TextBlock Text="עד תאריך:" />
                <DatePicker IsTodayHighlighted="True" />
            </StackPanel>
            <Button Grid.Column="2" Margin="8" Click="show_openings_btn_click" FontSize="18" Background="Blue" Foreground="White" Cursor="Hand" >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="16"/>
                    </Style>
                </Button.Resources>
                <TextBlock Text="הצג פתחים" TextWrapping="Wrap" TextAlignment="Center"/>
            </Button>
        </Grid>

        <Border Grid.Row="2" Margin="4" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="52"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <ComboBox Margin="4 4 2 4" x:Name="level_filter_ComboBox" />
                        <ComboBox Margin="4 0 2 4" x:Name="shape_filter_ComboBox" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <ComboBox Margin="2 4 4 4" x:Name="discipline_filter_ComboBox" />
                        <ComboBox Margin="2 0 4 4" x:Name="mct_filter_ComboBox" />
                    </StackPanel>
                </Grid>


            </Grid>
        </Border>

    </Grid>
</Window>
