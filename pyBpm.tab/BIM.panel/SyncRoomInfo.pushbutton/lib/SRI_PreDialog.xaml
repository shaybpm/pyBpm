<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="סנכרון מידע חדרים"
	MinHeight="500"
	MinWidth="280"
	ResizeMode="CanResize"
	WindowStartupLocation="CenterScreen"
	Width="600"
	Height="600"
	FlowDirection="RightToLeft">
	<Grid Margin="4">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Margin="4">
			<!-- Navigation -->
			<StackPanel Orientation="Horizontal">
				<Button x:Name="oneSourceModelButton"
					Content="מודל מקור יחיד"
					Click="oneSourceModelButton_click" />
				<Button x:Name="multipleSourceModelsButton"
					Content="מודלי מקור מרובים"
					Margin="5,0,0,0"
					Click="multipleSourceModelsButton_click" />
			</StackPanel>
		</Grid>

		<Grid Grid.Row="1" Margin="4">
			<!-- Main Frame -->
			<Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"
				Navigated="MainFrame_Navigated" />
		</Grid>

		<Grid Grid.Row="2" Margin="4">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" x:Name="ok_btn" Click="ok_btn_click" Content="אישור"
				IsEnabled="False" />
			<Button Grid.Column="1" x:Name="cancel_btn" Click="cancel_btn_click" Content="ביטול" />
		</Grid>

	</Grid>
</Window>