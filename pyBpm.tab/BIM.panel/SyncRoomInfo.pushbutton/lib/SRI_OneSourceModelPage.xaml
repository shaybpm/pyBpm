<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SRI_OneSourceModelPage"
	FlowDirection="RightToLeft">
	<Grid Margin="4" FlowDirection="RightToLeft">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Margin="4">
			<StackPanel>
				<TextBlock x:Name="titleTextBlock"
					Text="בחר מודל מקור"
					FontWeight="Bold" />
				<Grid Margin="0,5,0,0">
					<ComboBox Grid.Column="0" x:Name="sourceModelComboBox"
						SelectionChanged="sourceModelComboBox_SelectionChanged" />
				</Grid>
			</StackPanel>
		</Grid>

		<Grid Grid.Row="1" Margin="4"></Grid>

	</Grid>
</Page>